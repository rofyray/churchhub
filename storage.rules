rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload member photos
    match /churches/{churchId}/members/{memberId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024  // 5MB max
        && request.resource.contentType.matches('image/.*');
    }

    // Pending member photos - public write (token validation in Firestore)
    match /churches/{churchId}/pending/{pendingId}/{fileName} {
      allow write: if request.resource.size < 5 * 1024 * 1024  // 5MB max
        && request.resource.contentType.matches('image/.*');
      allow read: if request.auth != null;  // Only admins can view
    }
  }
}
